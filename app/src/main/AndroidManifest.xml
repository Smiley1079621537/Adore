        <activity android:name=".activity.MovieActivity"/>
        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="58bd06818630f559eb0000d7">
        </meta-data>

        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <activity
            android:name=".activity.BottomActivity"
            android:label="@string/title_activity_bottom">
        </activity>
        <activity android:name=".activity.OnlineMusicActivity">
        </activity>
        <service android:name=".service.PlayMusicService"/>
    </application>

</manifest>