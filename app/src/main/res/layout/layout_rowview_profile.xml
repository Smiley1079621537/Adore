<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/rowview_profile_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/splash"/>

    <TextView
        android:id="@+id/rowview_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rowview_profile_avatar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/rowview_profile_avatar"
        android:textStyle="bold"
        tools:text="爱茶语爱分享"/>

    <TextView
        android:id="@+id/rowview_profile_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rowview_profile_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/rowview_profile_avatar"
        tools:text="心心相印"/>

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/rowview_more"/>

</RelativeLayout>